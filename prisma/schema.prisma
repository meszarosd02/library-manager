generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id Int @id @default(autoincrement())
  title String
  authors Author[]
  shelf Shelf @relation(fields: [shelfId], references: [id])
  shelfId Int
  row_index Int @default(0)
  col_index Int @default(0)
  place Int @default(0)
}

model Author {
  id Int @id @default(autoincrement())
  name String
  books Book[]
}

model Shelf {
  id Int @id @default(autoincrement())
  name String
  row_num Int
  col_num Int
  books Book[]
}